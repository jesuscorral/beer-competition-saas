  "clients": [
    {
      "clientId": "bff-api",
      "name": "BFF API Gateway",
      "description": "Confidential client for BFF/API Gateway - validates frontend tokens",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "${KEYCLOAK_BFF_CLIENT_SECRET}",
      "redirectUris": [
        "http://localhost:5190/*",
        "https://localhost:7038/*"
      ],
      "webOrigins": [
        "http://localhost:5190",
        "https://localhost:7038",
