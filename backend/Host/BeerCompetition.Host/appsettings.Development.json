{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/beercomp",
    "Audience": "competition-service",
    "RequireHttpsMetadata": false,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "BaseUrl": "http://localhost:8080",
    "Realm": "beercomp",
    "AdminUsername": "admin",
    "AdminPassword": "admin"
  },
  
  "EnableSensitiveDataLogging": true,
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    }
  },
  
  "Development": {
    "Comments": [
      "Default Tenant ID used when no X-Tenant-ID header or JWT claim is present",
      "This enables testing via Swagger without authentication",
      "Tenant ID: 11111111-1111-1111-1111-111111111111"
    ]
  }
}

