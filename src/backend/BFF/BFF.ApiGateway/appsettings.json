{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/beercomp",
    "Audience": "bff-api",
    "ClientId": "bff-api",
    "ClientSecret": "TavSFpYLDiXdANR2UiBQ8BuAdzRuvc2Q",
    "TokenEndpoint": "http://localhost:8080/realms/beercomp/protocol/openid-connect/token",
    "RequireHttpsMetadata": false,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  
  "ServiceClients": {
    "CompetitionService": {
      "ClientId": "competition-service",
      "Audience": "competition-service"
    },
    "JudgingService": {
      "ClientId": "judging-service",
      "Audience": "judging-service"
    }
  },
  
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "https://localhost:5173",
      "http://localhost:3000"
    ]
  },
  
  "ReverseProxy": {
    "Routes": {
      "competition-route": {
        "ClusterId": "competition-cluster",
        "AuthorizationPolicy": "Organizer",
        "Match": {
          "Path": "/api/competitions/{**catch-all}"
        }
      },
      "entries-route": {
        "ClusterId": "competition-cluster",
        "AuthorizationPolicy": "AuthenticatedUser",
        "Match": {
          "Path": "/api/entries/{**catch-all}"
        }
      },
      "flights-route": {
        "ClusterId": "judging-cluster",
        "AuthorizationPolicy": "JudgeOrOrganizer",
        "Match": {
          "Path": "/api/flights/{**catch-all}"
        }
      },
      "scoresheets-route": {
        "ClusterId": "judging-cluster",
        "AuthorizationPolicy": "Judge",
        "Match": {
          "Path": "/api/scoresheets/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "competition-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:54422"
          }
        }
      },
      "judging-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}
